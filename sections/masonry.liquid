<style>
  <style>
      .rtl {
        direction: rtl !important;
      }
    </style>
</style>

<section class="">
  <div class="tw-max-w-screen-xl tw-px-4 tw-py-8 tw-mx-auto sm:tw-px-6 sm:tw-py-12 lg:tw-px-8">
    <ul class="tw-grid rtl tw-grid-cols-1 tw-gap-4 mt-8 lg:tw-grid-cols-3">
      <li>
        <a href="#" class="tw-relative tw-block tw-group">
          {{
            section.settings.masonry_image
            | image_url: width: 1100
            | image_tag:
              class: 'tw-object-cover tw-w-full tw-transition tw-duration-500 tw-aspect-square tw-group-hover:opacity-90"',
              loading: 'lazy'
          }}
          <div
            class=" tw-absolute tw-inset-0 tw-flex tw-flex-col tw-items-start tw-justify-end tw-p-6"
          >
            <h3 class="tw-text-xl tw-font-medium tw-text-white">{{ section.settings.masonry_image_title_r1 }}</h3>

            <span
              class="tw-mt-1.5 tw-inline-block tw-bg-black tw-px-5 tw-py-3 tw-text-xs tw-font-medium tw-uppercase tw-tracking-wide tw-text-white"
            >
            </span>
          </div>
        </a>
      </li>

      <li>
        <a href="#" class="tw-relative tw-block tw-group">
          {{
            section.settings.masonry_image_r2
            | image_url: width: 1100
            | image_tag:
              class: 'tw-object-cover tw-w-full tw-transition tw-duration-500 tw-aspect-square tw-group-hover:opacity-90"',
              loading: 'lazy'
          }}

          <div
            class="tw-absolute tw-inset-0 tw-flex tw-flex-col tw-items-start tw-justify-end tw-p-6"
          >
            <h3 class="tw-text-xl tw-font-medium tw-text-white">{{ section.settings.masonry_image_title_r2 }}</h3>

            <span
              class="tw-mt-1.5 tw-inline-block tw-bg-black tw-px-5 tw-py-3 tw-text-xs tw-font-medium tw-uppercase tw-tracking-wide tw-text-white"
            >
              Shop Now
            </span>
          </div>
        </a>
      </li>

      <li class="lg:tw-col-span-2 lg:tw-col-start-2 lg:tw-row-span-2 lg:tw-row-start-1">
        <a href="#" class="tw-relative tw-block tw-group">
          {{
            section.settings.masonry_image
            | image_url: width: 1100
            | image_tag:
              class: 'tw-object-cover tw-w-full tw-transition tw-duration-500 tw-aspect-square tw-group-hover:opacity-90"',
              loading: 'lazy'
          }}
          <div
            class="tw-absolute tw-inset-0 tw-flex tw-flex-col tw-items-start tw-justify-end tw-p-6"
          >
            <h3 class="tw-text-xl tw-font-medium tw-text-white">{{ section.settings.masonry_image_title }}</h3>

            <span
              class="tw-mt-1.5 tw-inline-block tw-bg-black tw-px-5 tw-py-3 tw-text-xs tw-font-medium tw-uppercase tw-tracking-wide tw-text-white"
            >
              Shop Now
            </span>
          </div>
        </a>
      </li>
    </ul>
  </div>
</section>

