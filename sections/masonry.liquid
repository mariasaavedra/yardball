<style>
  <style>
      .rtl {
        direction: rtl !important;
      }
    </style>
</style>

<section class="tw-container tw-mx-auto">
  <div class="tw-px-4 tw-py-8 tw-mx-auto sm:tw-px-6 sm:tw-py-12 lg:tw-px-8">
    <h3 class="tw-text-6xl tw-mb-8">{{ section.settings.masonry_title }}</h3>
    <ul class="tw-grid  rtl tw-grid-cols-2 tw-gap-4 mt-8 lg:tw-grid-cols-3">
      <li>
        <a href="#" class="tw-relative tw-block tw-group">
          {{
            section.settings.masonry_image_r1
            | image_url: width: 1100
            | image_tag:
              class: 'tw-object-cover tw-w-full tw-transition tw-duration-500 tw-aspect-square tw-group-hover:opacity-90"',
              loading: 'lazy'
          }}
          <div
            class=" tw-absolute tw-inset-0 tw-flex tw-flex-col tw-items-start tw-justify-end tw-p-6"
          >
            <span
              class="tw-mt-1.5 tw-inline-block tw-bg-cyan tw-px-5 tw-py-3  tw-font-bold tw-uppercase tw-tracking-wide tw-text-black"
            >
              {{ section.settings.masonry_image_title_r1 }}
            </span>
          </div>
        </a>
      </li>

      <li>
        <a href="#" class="tw-relative tw-block tw-group">
          {{
            section.settings.masonry_image_r2
            | image_url: width: 900
            | image_tag:
              class: 'tw-object-cover tw-w-full tw-transition tw-duration-500 tw-aspect-square tw-group-hover:opacity-90"',
              loading: 'lazy'
          }}

          <div
            class="tw-absolute tw-inset-0 tw-flex tw-flex-col tw-items-start tw-justify-end tw-p-6"
          >
            <span
              class="tw-mt-1.5 tw-inline-block tw-bg-cyan tw-px-5 tw-py-3  tw-font-bold tw-uppercase tw-tracking-wide tw-text-black"
            >
              {{ section.settings.masonry_image_title_r2 }}
            </span>
          </div>
        </a>
      </li>

      <li class="lg:tw-col-span-2 lg:tw-col-start-2 lg:tw-row-span-2 lg:tw-row-start-1">
        <a href="#" class="tw-relative tw-block tw-group">
          {{
            section.settings.masonry_image
            | image_url: width: 900
            | image_tag:
              class: 'tw-object-cover tw-w-full tw-transition tw-duration-500 tw-aspect-square tw-group-hover:opacity-90"',
              loading: 'lazy'
          }}
          <div
            class="tw-absolute tw-inset-0 tw-flex tw-flex-col tw-items-start tw-justify-end tw-p-6"
          >
            <span
              class="tw-mt-1.5 tw-inline-block tw-bg-cyan  tw-text-black tw-px-5 tw-py-3  tw-font-bold tw-uppercase tw-tracking-wide "
            >
              {{ section.settings.masonry_image_title }}
            </span>
          </div>
        </a>
      </li>
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Masonry",
  "presets": [
    {
      "name": "Masonry Grid",
      "category": "Grid"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "masonry_title",
      "label": "Title",
      "default": "THE BALL FOR ALL!"
    },
    {
      "type": "text",
      "id": "masonry_image_title",
      "label": "Title",
      "default": "The Perfect Ball"
    },
    {
      "type": "text",
      "id": "masonry_image_title_r1",
      "label": "Title",
      "default": "Goes where you go"
    },
    {
      "type": "text",
      "id": "masonry_image_title_r2",
      "label": "Title",
      "default": "SPONTANEOUS FUN"
    },
    {
      "type": "text",
      "id": "masonry_image_title_r3",
      "label": "Title",
      "default": "VARIETY OF COLORS"
    },
    {
      "type": "image_picker",
      "id": "masonry_image",
      "label": "Offer Image"
    },

    {
      "type": "image_picker",
      "id": "masonry_image_r1",
      "label": "Offer Image"
    },

    {
      "type": "image_picker",
      "id": "masonry_image_r2",
      "label": "Offer Image"
    },

    {
      "type": "image_picker",
      "id": "masonry_image_r3",
      "label": "Offer Image"
    },
    {
      "type": "text",
      "id": "masonry_description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "text",
      "id": "masonry_button",
      "label": "Button",
      "default": "Buy now"
    },
    {
      "type": "text",
      "id": "masonry_url",
      "label": "URL",
      "default": "#"
    }
  ]
}
{% endschema %}
