<style>
  img {
    margin: 0 auto;
  }
</style>
<section class="tw-text-center tw-bg-cream tw-px-4 md:px-0 tw-max-w-[1300px] tw-pt-[38px] tw-pb-[16px] tw-mx-auto">
  <section class="tw-mx-auto tw-text-center  tw-container ">
    <h1 class=" tw-text-center tw-mx-auto tw-text-5xl tw-mb-[24px]">{{ section.settings.offer_title }}</h1>
    <div class=" tw-grid-cols-3 tw-w-full   tw-justify-items-center tw-gap-2 md:tw-gap-4  tw-grid ">
      {% render 'triple-offer', package: 1, image: section.settings.offer_image_1 %}
      {% render 'triple-offer', package: 2, image: section.settings.offer_image_2 %}
      {% render 'triple-offer', package: 3, image: section.settings.offer_image_3 %}
    </div>
    <div class="tw-max-w-[1200px] tw-mx-auto tw-my-4">
      <a
        href="/collections/all"
        class="tw-bg-cyan tw-w-full tw-block tw-font-heading tw-hover:bg-blue-700 tw-text-5xl tw-p-8 tw-py-5 tw-mt-[5px] tw-text-white tw-font-bold  tw-rounded-lg tw-shadow-lg "
      >
        BUY NOW
      </a>
    </div>
  </section>
</section>
{% schema %}
{
  "name": "Triple Offer",
  "presets": [
    {
      "name": "Triple Offer",
      "category": "Offers"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "offer_title",
      "label": "Title",
      "default": "SHOP GLOVE TAN"
    },
    {
      "type": "image_picker",
      "id": "offer_image_1",
      "label": "Offer 1 Image"
    },
    {
      "type": "image_picker",
      "id": "offer_image_2",
      "label": "Offer 2 Image"
    },
    {
      "type": "image_picker",
      "id": "offer_image_3",
      "label": "Offer 3 Image"
    },
    {
      "type": "text",
      "id": "offer_description",
      "label": "Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "text",
      "id": "offer_button",
      "label": "Button",
      "default": "Buy now"
    },
    {
      "type": "text",
      "id": "offer_url",
      "label": "URL",
      "default": "#"
    }
  ]
}
{% endschema %}
